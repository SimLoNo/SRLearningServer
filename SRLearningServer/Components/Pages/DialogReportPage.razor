@page "/dialogcard/report"
@using Microsoft.AspNetCore.Authorization
@inject Radzen.DialogService dialogService
@attribute [Authorize(Roles = "User")]

<RadzenRow>
    <RadzenColumn Size="12" >
        <RadzenCard >
            <RadzenText Style="width:100%" TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Reporter fejl</RadzenText>
            <RadzenTextArea Placeholder="Beskriv fejl..." @bind-Value=@ReportText Style="width: 100%" aria-label="TextArea with placeholder" Rows="10" />
        </RadzenCard>
        
    </RadzenColumn>
</RadzenRow>
<RadzenRow JustifyContent="JustifyContent.SpaceBetween" >
    <RadzenButton Icon="close" Click="@((args) => dialogService.Close())" Variant="Variant.Flat" Text="Afbryd" />
    <RadzenButton Icon="send" Click="@((args) => dialogService.Close(ReportText))" Variant="Variant.Flat" Text="Send" />
</RadzenRow>

@code {
    private string ReportText { get; set; } = "";
    
}
